valor = 20
if valor > 50
    puts 'Eu sou maior que 50'
elsif valor == 50
    puts "Eu sou igual a 50"
else
    puts "Eu sou menor que 50"
end

# Outra opção mais legivel
valore = 30
puts "Eu sou maior que 50" if valore > 40

# função unless é o contrario do if, se a condição não for verdadeira o bloco é executado

valora = 30
puts "Eu sou maior que 40" unless valora > 40


# Case e When

linguagem = 'ruby'
case linguagem
when 'ruby'
    puts 'Bem vindo ao ruby'
when "python"
    puts 'Bem vindo ao python'
else
    puts 'Bem vindo ao java'
end



# A função for não é muito usada em ruby, ela é substituida por each

lista = [0,1,3,5,7,9]

lista.each do |meu_valor|
    puts "Meu valor usando each é #(meu_valor)"
end

for meu_valor in lista
    puts "Meu valor usando for é #(meu_valor)"
end


